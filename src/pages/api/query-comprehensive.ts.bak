// src/pages/api/query-comprehensive.ts
import type { NextApiRequest, NextApiResponse } from 'next';
import { createPublicClient, http, decodeEventLog } from 'viem';
import { AbiCoder } from 'ethers';
import { somniaTestnet } from 'viem/chains';
import { normalizePhone, hashPhone } from '../../lib/phone';

const CONTRACT_ADDRESS = '0x6AB397FF662e42312c003175DCD76EfF69D048Fc';

// Event signature for UserRegistrationBroadcast
const eventAbi = {
  type: 'event',
  name: 'UserRegistrationBroadcast',
  inputs: [
    { name: 'phoneHash', type: 'bytes32', indexed: true },
    { name: 'walletAddress', type: 'address', indexed: false },
    { name: 'registeredAt', type: 'uint64', indexed: false }
  ]
} as const;

// Contract ABI for getting schema data
const contractAbi = [
  {
    inputs: [{ name: 'id', type: 'bytes32' }],
    name: 'get',
    outputs: [{ name: '', type: 'bytes' }],
    stateMutability: 'view',
    type: 'function'
  },
  {
    inputs: [{ name: 'id', type: 'string' }],
    name: 'idToSchemaId',
    outputs: [{ name: '', type: 'bytes32' }],
    stateMutability: 'view',
    type: 'function'
  }
];

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  if (req.method !== 'GET' && req.method !== 'POST') {
    return res.status(405).json({ error: 'method not allowed' });
  }

  try {
    const phone = (req.method === 'GET' ? req.query.phone : req.body?.phone) as string;
    
    if (!phone) {
      return res.status(400).json({ error: 'phone parameter required' });
    }

    const rpcUrl = process.env.RPC_URL;
    if (!rpcUrl) {
      return res.status(500).json({ error: 'RPC_URL not configured' });
    }

    // normalize & hash
    const normalized = normalizePhone(phone);
    const phoneHash = hashPhone(normalized);

    // Create viem client
    const client = createPublicClient({
      chain: somniaTestnet,
      transport: http(rpcUrl)
    });

    // 1. Query user registration events
    const latestBlock = await client.getBlockNumber();
    const CHUNK_SIZE = 1000;
    const MAX_CHUNKS = 10;
    
    let allLogs: any[] = [];
    let currentBlock = latestBlock;
    
    for (let i = 0; i < MAX_CHUNKS; i++) {
      const fromBlock = currentBlock - BigInt(CHUNK_SIZE);
      
      const logs = await client.getLogs({
        address: CONTRACT_ADDRESS,
        event: eventAbi,
        args: {
          phoneHash: phoneHash as `0x${string}`
        },
        fromBlock,
        toBlock: currentBlock
      });
      
      if (logs.length > 0) {
        allLogs.push(...logs);
        if (i >= 3) break; // Found events, search a bit more then stop
      }
      
      currentBlock = fromBlock - BigInt(1);
      if (currentBlock < 0) break;
    }

    // Process registration events and look for corresponding price thresholds
    const registrations = [];
    const priceThresholds = [];
    
    for (const log of allLogs) {
      const decoded = decodeEventLog({
        abi: [eventAbi],
        data: log.data,
        topics: log.topics
      });

      const registration = {
        walletAddress: decoded.args.walletAddress,
        registeredAt: new Date(Number(decoded.args.registeredAt)).toISOString(),
        phoneHash: decoded.args.phoneHash,
        recordId: `${log.blockNumber}_${log.transactionIndex}_${log.logIndex}`,
        blockNumber: log.blockNumber,
        transactionHash: log.transactionHash
      };
      
      registrations.push(registration);

      // For each registration, try to find corresponding price threshold data
      // Look for price threshold data stored around the same time/transaction
      try {
        // Check transaction logs for data storage events to find the priceDataId
        const txLogs = await client.getTransactionReceipt({ hash: log.transactionHash });
        
        // Look for data storage events in the same transaction
        for (const txLog of txLogs.logs) {
          if (txLog.address.toLowerCase() === CONTRACT_ADDRESS.toLowerCase()) {
            try {
              // Try to get data from this log's potential data ID
              // The data ID would be in the log topics or data
              if (txLog.topics.length > 1) {
                const potentialDataId = txLog.topics[1]; // First topic after event signature
                
                try {
                  const data = await client.readContract({
                    address: CONTRACT_ADDRESS,
                    abi: contractAbi,
                    functionName: 'get',
                    args: [potentialDataId]
                  });

                  if (data && data !== '0x') {
                    // Try to decode as price threshold data
                    const abiCoder = new AbiCoder();
                    const decoded = abiCoder.decode(
                      ['bytes32', 'string', 'uint256', 'uint256', 'uint64'],
                      data
                    );
                    
                    // Check if this price data belongs to our phone
                    if (decoded[0] === phoneHash) {
                      priceThresholds.push({
                        dataId: potentialDataId,
                        phoneHash: decoded[0],
                        tokenSymbol: decoded[1],
                        minLossPercentage: Number(decoded[2]),
                        maxProfitPercentage: Number(decoded[3]),
                        updatedAt: Number(decoded[4]),
                        transactionHash: log.transactionHash
                      });
                    }
                  }
                } catch (e) {
                  // Not price threshold data, continue
                }
              }
            } catch (e) {
              // Skip this log
            }
          }
        }
      } catch (e) {
        console.error('Error finding price threshold for registration:', e.message);
      }
    }

    // Build comprehensive result
    const result = {
      phone: normalized,
      found: registrations.length > 0 || priceThresholds.length > 0,
      registrations: registrations,
      priceThresholds: priceThresholds,
      registrationCount: registrations.length,
      thresholdCount: priceThresholds.length
    };

    // Convert BigInt values to strings for JSON serialization
    return res.json(JSON.parse(JSON.stringify(result, (key, value) =>
      typeof value === 'bigint' ? value.toString() : value
    )));

  } catch (error: any) {
    console.error('Query error:', error);
    return res.status(500).json({ 
      error: 'Failed to query data',
      details: error.message
    });
  }
}
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "skipLibCheck": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "noImplicitAny": false
    },
    "include": ["./**/*.ts", "../services/**/*.ts"],
    "ts-node": {
      "esm": false,
      "compilerOptions": {
        "module": "commonjs",
        "skipLibCheck": true
      }
    }
  }
  